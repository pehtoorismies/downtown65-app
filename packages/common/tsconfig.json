{
  "extends": "../../tsconfig.json",
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "dist"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "target": "es2017",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "outDir": "dist",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  }
}
